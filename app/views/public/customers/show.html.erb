<h2>マイページ</h2>

<div class="container">
  <div class="row">
    <div class="col-8">
      <div>
        <h5>登録情報　　<%= link_to "編集する", edit_customer_path(@customer), class: "btn btn-success" %></h5>
      </div>
      <table class="table table-bordered">
        <tr><th>氏名</th><th><%= @customer.last_name %><%= @customer.first_name %></th></tr>
        <tr><th>フリカナ</th><th><%= @customer.last_name_kana %><%= @customer.first_name_kana %></th></tr>
        <tr><th>郵便番号</th><th><%= @customer.postal_code %></th></tr>
        <tr><th>住所</th><th><%= @customer.address %></th></tr>
        <tr><th>電話番号</th><th><%= @customer.phone_number %></th></tr>
        <tr><th>メールアドレス</th><th><%= @customer.email %></th></tr>
      </table>
      <div>
        <h5 class="py-1">配送先　　　<%= link_to "一覧を見る", addresses_path, class: "btn btn-primary" %></h5>
        <h5 class="py-1">注文履歴　　<%= link_to "一覧を見る", order_path(@customer), class: "btn btn-primary" %></h5>
      </div>
    </div>
  </div>
</div>