<div class="container">
  <div class="row mt-5">
    <div class="col-md-8 offset-md-1">
      <h5>マイページ</h5>

      <table class="table table-hover table-inverse">
        <tr>
          <th>氏名</th>
          <th><%= @customer.last_name %><%= @customer.first_name %></th>
        </tr>
        <tr>
          <th>フリガナ</th>
          <th><%= @customer.last_name_kana %><%= @customer.first_name_kana %></th>
        </tr>
        <tr>
          <th>郵便番号</th>
          <th><%= @customer.postal_code %></th>
        </tr>
        <tr>
          <th>住所</th>
          <th><%= @customer.address %></th>
        </tr>
        <tr>
          <th>電話番号</th>
          <th><%= @customer.phone_number %></th>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <th><%= @customer.email %></th>
        </tr>
      </table>
      <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <%= link_to "編集する", edit_customer_path(@customer), class: "btn btn-outline-secondary" %>
      </div>
      <div>
        <p class="py-1">配送先　　　<%= link_to "一覧を見る", addresses_path, class: "btn btn-outline-secondary" %></p>
        <p class="py-1">注文履歴　　<%= link_to "一覧を見る", orders_path, class: "btn btn-outline-secondary" %></p>
      </div>
    </div>
  </div>
</div>