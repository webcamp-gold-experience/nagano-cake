<div class="container">
  <div class="row">
    <div class="col-lg-8">
      <h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細編集</h2>
      <table class="table">
        <tr><th>会員ID</th><th><%= @customer.id %></th></tr>
        <%= form_with model: [:admin, @customer], local: true do |f| %>
          <div class="form-group">
            <tr>
              <th>氏名</th>
              <th><%= f.text_field :last_name, class: "form-control" %></th>
              <th><%= f.text_field :first_name, class: "form-control" %></th>
            </tr>
          </div>

          <div class="form-group">
            <tr>
              <th>フリガナ</th>
              <th><%= f.text_field :last_name_kana, class: "form-control" %></th>
              <th><%= f.text_field :first_name_kana, class: "form-control" %></th>
            </tr>
          </div>

          <div class="form-group">
            <tr>
              <th>郵便番号</th>
              <th><%= f.text_field :postal_code, class: "form-control" %></th>
            </tr>
          </div>

          <div class="form-group">
            <tr>
              <th>住所</th>
              <th><%= f.text_field :address, class: "form-control" %></th>
            </tr>
          </div>

          <div class="form-group">
            <tr>
              <th>電話番号</th>
              <th><%= f.text_field :phone_number, class: "form-control" %></th>
            </tr>
          </div>

          <div class="form-group">
            <tr>
              <th>メールアドレス</th>
              <th><%= f.text_field :email, class: "form-control" %></th>
            </tr>
          </div>

          <div class="form-group">
            <tr>
              <th>会員ステータス</th>
              <th>
                <div class="field">
                  <%= f.radio_button :is_deleted, :true %>
                  <%= f.label :有効 %>

                  <%= f.radio_button :is_deleted, :false %>
                  <%= f.label :退会 %>
                </div>
              </th>
            </tr>
          </div>
      </table>
        <div class="form-group">
          <%= f.submit "変更を保存", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
