
      <h2>customer 新規登録</h2>
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "customers/shared/error_messages", resource: resource %>
        
        <div class="form-group row">
          <div class="col-sm-6">
            <%#= f.label :last_name %><br />
            <%= f.text_field :last_name, autofocus: true, placeholder: "LastName" %>
          </div>
          <div class="col-sm-6">
            <%#= f.label :first_name %><br />
            <%= f.text_field :first_name, autofocus: true, placeholder: "FirstName" %>
          </div>
        </div>
        
        <div class="form-group row">
          <div class="col-sm-6">
          <%#= f.label :last_name_kana %><br />
          <%= f.text_field :last_name_kana, autofocus: true, placeholder: "LastNameKana"%>
          </div>
        
          <div class="col-sm-6">
            <%#= f.label :first_name_kana %><br />
            <%= f.text_field :first_name_kana, autofocus: true, placeholder: "FirstNameKana"%>
          </div>
        </div>
        
         <div class="form-group">
          <%#= f.label :postal_code %><br />
          <%= f.text_field :postal_code, autofocus: true, placeholder: "PostalCode"%>
        </div>
        
         <div class="form-group">
          <%#= f.label :address %><br />
          <%= f.text_field :address, autofocus: true, placeholder: "Address"%>
        </div>
        
         <div class="form-group">
          <%#= f.label :phone_number %><br />
          <%= f.text_field :phone_number, autofocus: true, placeholder: "PhoneNumber"%>
        </div>
      
        <div class="form-group">
          <%#= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email"%>
        </div>
      
        <div class="form-group">
          <%#= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password"%>
        </div>
      
        <div class="form-group">
          <%#= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "PasswordConfirmation" %>
        </div>
      
        <div class="form-group">
          <%= f.submit "Sign Up" %>
        </div>
      <% end %>
      
      <%#= render "customers/shared/links" %>
